<Window x:Class="ConectivoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConectivoApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="454" Width="807" 
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown"
        Background="Transparent">

    <Grid Background="#606161">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="1" Grid.Column="1" Text="CONECTIVO" FontSize="60" FontFamily="Roboto" FontWeight="DemiBold" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="#FF32ADD6" Margin="0,54,0,0" Grid.RowSpan="2" />

        <TextBlock Grid.Row="2" Grid.Column="1" Text="Identyfikator" FontSize="20" FontFamily="Roboto"  HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#FF32ADD6" Margin="99,84,0,0" FontWeight="DemiBold" />
        <TextBox x:Name="username" Grid.Column="1" Margin="99,108,99,78" Grid.Row="2" Height="NaN" Width="NaN" RenderTransformOrigin="0.588,0.477" BorderThickness="0,0,0,3" BorderBrush="#818282" Background="Transparent"/>

        <TextBlock Grid.Row="2" Grid.Column="1" Text="Hasło" FontSize="20" FontFamily="Roboto"  HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#FF32ADD6" Margin="99,152,0,0" FontWeight="DemiBold"/>
        <PasswordBox x:Name="password" Grid.Column="1" Margin="99,176,99,10" Grid.Row="2" Height="NaN" Width="NaN" RenderTransformOrigin="0.54,2.79" Background="Transparent" BorderThickness="0,0,0,3" BorderBrush="#818282"/>

        <Button x:Name="buttonlogin" Grid.Row="3" Grid.Column="1" Content="Login" Height="36" Width="80" BorderThickness="3" FontSize=" 16" BorderBrush="#FF32ADD6" FontWeight="DemiBold" Background="#818282" Foreground="AntiqueWhite">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="14"></Setter>
                </Style>
            </Button.Resources>
            
        </Button>

    </Grid>
</Window>
